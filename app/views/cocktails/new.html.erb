<div class="container">
  <div class="row">
    <div class="col-sm-4 col-offset-4">
      <h2>Add a Cocktail</h2>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :attachinary %>
        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
