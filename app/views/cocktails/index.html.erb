<div class="container">
  <div class="row">
    <div class="col-sm-6 col-offset-3">
      <h2>List of Cocktails</h2>
      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <% end %>
      </ul>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
