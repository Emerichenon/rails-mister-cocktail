<div class="container">
  <div class="row">
    <div class="col-sm-4 col-offset-4">
      <h2><%= @cocktail.name %></h2>
      <h3>List of the ingredients and doses</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "are you sure?" }, class: "btn" %></li>
        <% end %>
      </ul>
      <%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

    </div>
  </div>
</div>
