<div class="container">
  <div class="row">
    <div class="col-sm-4 col-offset-4">
      <h2>Add a Dose in the <%= @cocktail.name %></h2>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient %>
        <%= f.button :submit, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
